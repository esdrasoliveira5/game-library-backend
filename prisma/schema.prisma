// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Favorites {
  id      String  @id @default(uuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  game    Games  @relation(fields: [gamesId], references: [id])
  gamesId String
}

model Completed {
  id      String  @id @default(uuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  game    Games  @relation(fields: [gamesId], references: [id])
  gamesId String
}

model Uncompleted {
  id      String  @id @default(uuid())
  User    User   @relation(fields: [userId], references: [id])
  userId  String
  game    Games  @relation(fields: [gamesId], references: [id])
  gamesId String
}

model User {
  id          String        @id @default(uuid())
  name        String
  lastName    String
  email       String        @unique
  password    String
  avatar      String
  favorites   Favorites[]
  completed   Completed[]
  uncompleted Uncompleted[]
}

model Games {
  id          String        @id @default(uuid())
  idGame      Int           @unique
  name        String
  image       String
  favorites   Favorites[]
  completed   Completed[]
  uncompleted Uncompleted[]

}
